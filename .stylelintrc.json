{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": true,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9-]*$",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "color-hex-length": "long",
    "no-descending-specificity": null
  }
}
